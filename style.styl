$bgcolor = #242424
$button_size = 50px
$border-radius = 40px

#wmd-button-bar
	position absolute
	visibility hidden
	top 0
	left 0
	z-index 10
	font-family HelveticaNeue, Helvetica, Arial, sans-serif
	font-size 16px
	border-radius $border-radius
	box-shadow 0 0 3px black
	list-style-type none
	color #fff

	&.show
		visibility visible
		animation 0.2s toolbar

	&:before
		border-width 9px

	&:after, &:before
		margin-left -12px
		position: absolute;
		bottom -44px
		left 50%
		right 100%
		width 0
		height 20px
		border-width 12px
		display block
		content " "
		border-color transparent
		border-style solid solid outset
		pointer-events none
		border-top-color $bgcolor
		
	.wmd-button-row
		padding 0
		margin 0

		li:hover
			color #ff6
			background #000

		li:last-child
			border-right none
			border-radius 0 $border-radius $border-radius 0

		li:first-child
			border-left none
			border-radius $border-radius 0 0 $border-radius 

		li.wmd-button-hidden
			display none

		li
			background $bgcolor
			display inline-block
			list-style none
			width 50px
			height 50px
			line-height 50px
			text-align center
			cursor pointer
			border-right 1px solid #000
			border-left 1px solid rgba(255,255,255,0.1)


@keyframes toolbar
	0%
		opacity: 0; transform: translateY(20px) scale(0.6);
	100%
		opacity: 1; transform: translateY(0) scale(1);

